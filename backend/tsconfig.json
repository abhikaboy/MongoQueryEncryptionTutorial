{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "lib": ["ES6", "dom", "esnext"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
